# Example Streamlit Secrets Configuration
# Copy this file to secrets.toml and fill in your actual credentials
# WARNING: Never commit secrets.toml to version control!

# API Keys for CAD Generation
# Required for CAD model generation from text and images
ZOO_API_KEY = "your_zoo_dev_api_key_here"
ANTHROPIC_API_KEY = "your_anthropic_api_key_here"

# Get Zoo.dev API key from: https://zoo.dev/account
# Get Anthropic API key from: https://console.anthropic.com/

[github]
# GitHub Personal Access Token
# Get one from: https://github.com/settings/tokens
# Required scopes: repo (for private repos) or public_repo (for public repos)
token = "ghp_your_github_personal_access_token_here"

# Repository name in format "owner/repo"
# Example: "openai/gpt-3" or "your-username/your-repo"
repo = "owner/repository_name"

# Optional: Additional configuration
[general]
# Default user for audit logging
default_user = "default_user"

# Project root directory
project_root = "."

# Backup directory
backup_dir = "projects/backups"
